<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentBottom="true"
    android:background="@drawable/background"
    android:paddingLeft="0dp"
    >


    <ImageButton
        android:id="@+id/upBotton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_medium"
        android:paddingStart="15sp"
        android:text="Exercise Plan"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="61dp"
        android:layout_height="727dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/upBotton">

        <TextView
            android:id="@+id/ex_plan1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingStart="25dp"
            android:text="1st PLAN       |"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ex_plan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/roboto_regular"
            android:paddingStart="25dp"
            android:text="2nd PLAN "
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingStart="65dp"
            android:text="Workouts "
            android:textColor="@color/black"
            android:textSize="27sp" />




    </RelativeLayout>

<!--    <HorizontalScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="400dp"-->
<!--        android:layout_marginLeft="90dp"-->
<!--        android:scrollbars="none"-->
<!--        android:layout_marginTop="140dp">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="175dp"
            android:layout_marginLeft="70dp">

            <com.google.android.material.card.MaterialCardView

                android:layout_width="250dp"
                android:layout_height="422dp"
                android:layout_marginTop="30dp"
                android:alpha="3"
                app:cardBackgroundColor="#803E6778"
                app:cardCornerRadius="23dp"
                app:cardElevation="0dp">


<!--                <com.google.android.material.card.MaterialCardView-->

<!--                    android:layout_width="181dp"-->
<!--                    android:layout_height="280dp"-->
<!--                    android:layout_marginStart="13dp"-->
<!--                    android:layout_marginTop="120dp"-->
<!--                    android:alpha="3"-->
<!--                    app:cardBackgroundColor="#12668C9C"-->
<!--                    app:cardCornerRadius="23dp"-->
<!--                    app:cardElevation="0dp"-->
<!--                    app:strokeColor="@color/gray"-->
<!--                    app:strokeWidth="1dp">-->
            <com.google.android.material.card.MaterialCardView

                android:layout_width="220dp"
                android:layout_height="260dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="130dp"
                android:alpha="3"
                app:cardBackgroundColor="#05668C9C"
                app:cardCornerRadius="23dp"
                app:cardElevation="0dp"
                app:strokeColor="#663E6778"
                app:strokeWidth="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"

                    android:text="Exercises"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="Time(s)"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginStart="157dp"
                    android:layout_marginBottom="10dp"

                    android:layout_marginTop="15dp"
                    android:text="Sets"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>



                <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:verticalScrollbarPosition="defaultPosition"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="20dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/explan"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:fontFamily="@font/roboto_regular"
                            android:layout_marginStart="15dp"
                            android:text="1 Egg - 90  kcal "
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </LinearLayout>
                    </ScrollView>
            </com.google.android.material.card.MaterialCardView>

                </com.google.android.material.card.MaterialCardView>



<!--            </com.google.android.material.card.MaterialCardView>-->
<androidx.cardview.widget.CardView
    android:layout_width="131dp"
    android:layout_height="132dp"
    app:cardCornerRadius="100dp"
    android:layout_marginStart="-110dp"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="@color/black">

    <ImageView
        android:id="@+id/exercisePlan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ex13"
        android:elevation="4dp" />

</androidx.cardview.widget.CardView>


        </LinearLayout>
<!--    </HorizontalScrollView>-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp">


        <RelativeLayout
            android:id="@+id/bottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@drawable/bottomnavcorners"
            android:backgroundTint="#A1AFBB"
            app:itemIconTint="@color/black"

            >


            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavigationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#A1AFBB"
                app:itemIconTint="@color/bottom_item_nav"
                app:itemTextColor="@color/bottom_item_nav"
                app:menu="@menu/bottom_nav_menu" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>