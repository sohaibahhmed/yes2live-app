<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".FoodDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/food5"
        >
<!--        <ImageView-->
<!--            android:layout_width="600dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:src="@drawable/food1"/>-->
<!--            -->

        <TextView
            android:id="@+id/foodname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/roboto_bold"
            android:letterSpacing="0.05"
            android:text="Chicken Biryani"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="normal"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/calorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="172dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto_regular"
                android:text="294"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="172dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/calorie"
                android:fontFamily="@font/roboto_regular"
                android:text="kcal"
                android:textColor="@color/white"
                android:textSize="16sp" />


        </LinearLayout>
           </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pickQuantity"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Pick the Quantity"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/quantityno"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="70dp"
            android:autofillHints="0"
            android:inputType="numberDecimal"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/servings"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="150dp"
            android:layout_toEndOf="@+id/quantityno"
            android:fontFamily="@font/font"
            android:text="Servings"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            />


    </RelativeLayout>

    <TextView
        android:id="@+id/nutriInfo"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginTop="55dp"
        android:text="Nutritional Information"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="normal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">


        <LinearLayout

            android:layout_width="91dp"
            android:layout_height="141dp"
            android:baselineAligned="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/protein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Proteins"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />

            <com.google.android.material.card.MaterialCardView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#E5E4E2"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="false">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:layout_above="@+id/protein"
                android:layout_marginStart="7dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/proteins2"></ImageView>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/protein_cal"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/roboto_regular"
                android:text="3.06 "
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="91dp"
            android:layout_height="141dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="20dp"
            android:baselineAligned="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Fats"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />

            <com.google.android.material.card.MaterialCardView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#E5E4E2"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="false">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:layout_above="@+id/textfemale"
                android:layout_marginStart="7dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/fats"></ImageView>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/fats_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="0.27"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="normal" />
        </LinearLayout>


        <LinearLayout

            android:layout_width="91dp"
            android:layout_height="141dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="15dp"
            android:baselineAligned="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Fats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Carbs"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />

            <com.google.android.material.card.MaterialCardView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="7dp"
                app:cardBackgroundColor="#E5E4E2"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="false">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:layout_above="@+id/protein"
                android:layout_marginStart="7dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/carbs"></ImageView>

            </com.google.android.material.card.MaterialCardView>



            <TextView
                android:id="@+id/carbs_cal"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:fontFamily="@font/font"
                android:text="3.6"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>


    <android.widget.Button
        android:id="@+id/NextButton"
        android:layout_width="164dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/buttonbackground"
        android:text="Add"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"/>


</LinearLayout>