<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityLevel">


    <ImageButton
        android:id="@+id/PreviousButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        app:srcCompat="@drawable/ic_baseline_navigate_before_24" />


    <TextView
        android:id="@+id/activitylevel"
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:paddingStart="7dp"
        android:paddingTop="60dp"
        android:text="How Active Are You?"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/level1"
        android:layout_width="wrap_content"
        android:layout_height="104dp"
        android:layout_below="@id/activitylevel"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:onClick="onClick">

        <TextView
            android:id="@+id/NotVeryActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Not Very Active"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/roboto_regular"
            android:lineSpacingExtra="1dp"
            android:text="Spend most of the day sitting (e.g. bankteller, desk job)"
            android:textColor="@color/dark_grey"
            android:textSize="13dp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/level2"
        android:layout_width="wrap_content"
        android:layout_height="104dp"
        android:layout_below="@id/level1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:onClick="onClick">

        <TextView
            android:id="@+id/lightlyActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Lightly Active"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/roboto_regular"
            android:lineSpacingExtra="1dp"
            android:text="Spend a good part of the body on your feet(e.g. teacher, salesperson)"
            android:textColor="@color/dark_grey"
            android:textSize="13dp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/level3"
        android:layout_width="wrap_content"
        android:layout_height="104dp"
        android:layout_below="@id/level2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:onClick="onClick">

        <TextView
            android:id="@+id/active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Active"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/roboto_regular"
            android:lineSpacingExtra="1dp"
            android:text="Spend a good part of the day doing some physical activity(e.g. food server,postal carrier"
            android:textColor="@color/dark_grey"
            android:textSize="13dp" />
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/level4"
        android:layout_width="wrap_content"
        android:layout_height="104dp"
        android:layout_below="@id/level3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:onClick="onClick">

        <TextView
            android:id="@+id/veryActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Very Active"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/roboto_regular"
            android:lineSpacingExtra="1dp"
            android:text="Spend most of the day doing heavy physical activity(e.g. bike messenger, carpenter)"
            android:textColor="@color/dark_grey"
            android:textSize="13dp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/level5"
        android:layout_width="wrap_content"
        android:layout_height="104dp"
        android:layout_below="@id/level4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:onClick="onClick">

        <TextView
            android:id="@+id/ExtraActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Extra Active"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/roboto_regular"
            android:lineSpacingExtra="1dp"
            android:text="very hard exercise/sports and physical job or 2x training"
            android:textColor="@color/dark_grey"
            android:textSize="13dp" />
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>