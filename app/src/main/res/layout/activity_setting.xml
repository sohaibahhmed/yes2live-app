<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.navbar.Settings">

    <ImageButton
        android:id="@+id/PreviousButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_medium"
        android:letterSpacing=".02"
        android:paddingStart="20sp"
        android:text="Settings"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <io.getstream.avatarview.AvatarView
            android:id="@+id/avatar_imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="65dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:avatarViewInitials="EH"
            app:avatarViewInitialsBackgroundColor="@color/skyBlue"
            app:avatarViewInitialsTextColor="@color/white"
            app:avatarViewInitialsTextSize="21sp"
            app:avatarViewInitialsTextSizeRatio="0.33"
            app:avatarViewInitialsTextStyle="bold"/>
            <!--android:src="@drawable/ic_baseline_account_circle_24" -->

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingStart="35dp"
            android:text="Eman Hanif"
            android:textColor="@color/black"
            android:textFontWeight="4"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="102dp"
            android:fontFamily="@font/roboto_regular"
            android:letterSpacing=".05"
            android:paddingStart="35dp"
            android:text="User since: "
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="155dp"
            android:layout_marginTop="102dp"
            android:fontFamily="@font/roboto_regular"
            android:letterSpacing=".05"
            android:paddingStart="30dp"
            android:text=" 21 february, 2021"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/level1"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="160dp"
                android:onClick="ClickonBio"
                android:paddingBottom="10dp"
                app:strokeColor="#E5E4E2"
                app:strokeWidth="0.1dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:src="@drawable/bio"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="25dp"
                    android:text="Bio"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/biopageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginEnd="45dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="Write something about you here"
                    android:letterSpacing=".05"
                    android:maxLines="1"
                    android:paddingStart="25dp"
                    android:textColor="@color/dark_grey"
                    android:textSize="16sp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/personalDetail"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_below="@+id/level1"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                app:strokeColor="#E5E4E2"
                app:strokeWidth="0.1dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_baseline_person_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:letterSpacing=".05"
                    android:paddingStart="25dp"
                    android:text="Personal Detail"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="45dp"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="Height, Weight, Gender, Activity, Age"
                    android:letterSpacing=".05"
                    android:paddingStart="25dp"
                    android:textColor="@color/dark_grey"
                    android:textSize="16sp" />


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView

                android:id="@+id/level4"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_below="@+id/personalDetail"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="false"
                app:strokeColor="#E5E4E2"
                app:strokeWidth="0.1dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/email"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:letterSpacing=".05"
                    android:paddingStart="25dp"
                    android:text="Email Support"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="45dp"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="Send your query here"
                    android:letterSpacing=".05"
                    android:paddingStart="25dp"
                    android:textColor="@color/dark_grey"
                    android:textSize="16sp" />


            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView

                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_below="@+id/level4"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="false"
                app:strokeColor="#E5E4E2"
                app:strokeWidth="0.1dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_baseline_info_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:letterSpacing=".05"
                    android:paddingStart="25dp"
                    android:text="About Us"
                    android:textColor="@color/black"
                    android:textSize="18sp" />


            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </RelativeLayout>
    </RelativeLayout>